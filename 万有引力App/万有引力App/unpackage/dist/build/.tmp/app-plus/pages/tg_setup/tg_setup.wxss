
.cirFree_top {
	height: 424rpx;
	position: relative;
	background-color: #F9F9F9;
}
.cirFree_top .bg {
	top: 0;
	left: 0;
	width: 100%;
	height: 424rpx;
	display: block;
	position: absolute;
}
.cirFree_upload {
	top: 60rpx;
	z-index: 99;
	width: 628rpx;
	height: 304rpx;
	margin: 0 auto;
	position: relative;
	text-align: center;
	line-height: 304rpx;
	background-color: #fff;
}
.cirFree_upload.opacity {
	opacity: 0.3;
}
.cirFree_upload .img {
	width: 100%;
	height: 100%;
	display: block;
	margin: 0 auto;
}
.cirFree_upload .title {
	color: #333;
	display: block;
	font-size: 30rpx;
}
.cirFree_list {
	position: relative;
	padding: 28rpx 32rpx;
	border-bottom: 1px solid #eee;
}
.cirFree_list .name {
	float: left;
	color: #333;
	display: block;
	font-size: 34rpx;
}
.cirFree_list .int {
	width: 63%;
	float: left;
	color: #333;
	display: block;
	font-size: 32rpx;
	margin-left: 32rpx;
}
.cirFree_list .text {
	float: left;
	width: 75%;
	color: #333;
	height: 280rpx;
	display: block;
	font-size: 32rpx;
	margin-top: -5rpx;
	margin-left: 32rpx;
	line-height: 180%;
}
.cirFree_btn {
	color: #fff;
	width: 455rpx;
	height: 93rpx;
	display: block;
	margin: 0 auto;
	font-size: 34rpx;
	text-align: center;
	line-height: 93rpx;
	margin-top: 200rpx;
	border-radius: 50rpx;
	background-color: #D8D8D8;
	box-shadow: -1rpx 10rpx 15rpx 3rpx rgba(51, 145, 255, 0.2);
}
.cirFree_btn.cur {
	background: -webkit-linear-gradient(330deg, rgba(28, 210, 197, 1) 0%, rgba(4, 186, 173, 1) 100%);
	background: linear-gradient(120deg, rgba(28, 210, 197, 1) 0%, rgba(4, 186, 173, 1) 100%);
}

