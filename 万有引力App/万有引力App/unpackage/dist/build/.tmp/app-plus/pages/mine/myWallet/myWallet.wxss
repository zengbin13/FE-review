
.wallet_top {
	width: 100%;
	height: 300rpx;
	background-color: #01b7aa;
	/* background:linear-gradient(135deg,rgba(32,213,200,1) 0%,rgba(1,183,170,1) 100%); */
}
.wallet_topitm {
	top: 27rpx;
	margin: 0 30rpx;
	overflow: hidden;
	position: relative;
	border-radius: 8rpx;
	padding: 32rpx 29rpx;
	background-color: #fff;
	box-shadow: 0 0 10rpx 0 rgba(176, 176, 176, 0.5);
}
.wallet_topitm .title {
	color: #333;
	display: block;
	font-size: 24rpx;
	text-align: right;
}
.wallet_topitm .total {
	margin-top: 17rpx;
	text-align: center;
}
.wallet_topitm .total .price {
	color: #333;
	display: block;
	font-size: 58rpx;
}
.wallet_topitm .total .price .unit {
	color: #333;
	font-size: 26rpx;
	display: inline-block;
}
.wallet_topitm .total .name {
	color: #333;
	display: block;
	font-size: 26rpx;
}
.income {
	margin-top: 90rpx;
}
.income_list {
	width: 50%;
	float: left;
	display: block;
	text-align: center;
	position: relative;
}
.income_list:first-child:after {
	content: "";
	top: 8rpx;
	right: 0;
	width: 1rpx;
	height: 102rpx;
	display: block;
	position: absolute;
	background-color: #eee;
}
.income_list .name {
	color: #A9A9A9;
	display: block;
	font-size: 26rpx;
}
.income_list .num {
	color: #E8541E;
	display: block;
	font-size: 48rpx;
	font-weight: bold;
	margin-top: 11rpx;
}
.wallet_itm {
	margin-top: 100rpx;
}
.wallet_itm .wallet_list .link {
	padding: 22rpx 32rpx;
	padding-bottom: 0;
}
.wallet_itm .wallet_list .wallet_list_lf {
	float: left;
	width: 60rpx;
	height: 60rpx;
	display: block;
}
.wallet_itm .wallet_list .wallet_list_lf .img {
	width: 40rpx;
	height: 40rpx;
	display: block;
	margin: 0 auto;
	margin-top: 10rpx;
}
.wallet_itm .wallet_list .wallet_list_fr {
	width: 86%;
	float: right;
	padding-bottom: 22rpx;
	border-bottom: 1px solid #eee;
}
.wallet_itm .wallet_list .wallet_list_fr .name {
	float: left;
	color: #333;
	display: block;
	font-size: 34rpx;
}
.wallet_itm .wallet_list .wallet_list_fr .img {
	float: right;
	width: 16rpx;
	height: 26rpx;
	display: block;
	margin-top: 10rpx;
}

