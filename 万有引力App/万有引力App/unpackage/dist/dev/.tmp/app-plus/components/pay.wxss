
.pay_top {
	padding: 80rpx 30rpx 57rpx;
	background-color: #f5f5f5;
}
.pay_top .dl {
	float: left;
	color: #333;
	height: 48rpx;
	display: block;
	line-height: 48rpx;
	font-size: 36rpx;
}
.pay_top .int {
	float: left;
	width: 90%;
	color: #333;
	height: 48rpx;
	display: block;
	line-height: 48rpx;
	font-size: 30rpx;
	margin-left: 20rpx;
}
.pay_top_price {
	padding-bottom: 5rpx;
	border-bottom: 1px solid #eee;
}
.pay_list .img {
	top: 18rpx;
	float: left;
	width: 60rpx;
	height: 60rpx;
	display: block;
	margin: 0 32rpx;
	position: relative;
}
.pay_list .pay_info {
	width: 83%;
	float: right;
	padding: 27rpx 0;
	border-bottom: 1px solid #eee;
}
.pay_list .pay_info .name {
	color: #333;
	float: left;
	display: block;
	font-size: 34rpx;
}
.pay_list .pay_info .bar {
	float: right;
	width: 60rpx;
	height: 60rpx;
	display: block;
	margin: 0 32rpx;
	position: relative;
}
.pay_btn {
	left: 5%;
	width: 90%;
	bottom: 87rpx;
	color: #fff;
	display: block;
	height: 88rpx;
	font-size: 30rpx;
	position: absolute;
	border-radius: 4rpx;
	line-height: 88rpx;
	text-align: center;
	background: -webkit-linear-gradient(330deg, rgba(255, 144, 62, 1) 0%, rgba(255, 66, 55, 1) 100%);
	background: linear-gradient(120deg, rgba(255, 144, 62, 1) 0%, rgba(255, 66, 55, 1) 100%);
}

