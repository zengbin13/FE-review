
page {
	background-color: #F9F9F9;
}
.circle_logo {
	width: 165rpx;
	height: 165rpx;
	display: block;
	margin: 0 auto;
	padding: 52rpx 0;
}
.circle_logo .img {
	width: 165rpx;
	height: 165rpx;
	display: block;
	border-radius: 50%;
}
.circle_itm {
	padding: 0 30rpx;
	padding-bottom: 50rpx;
}
.circle_itm .circle_list {
	position: relative;
	margin-top: 32rpx;
	border-radius: 8rpx;
	padding: 26rpx 30rpx;
	background-color: #fff;
}
.circle_itm .circle_list .title {
	float: left;
	color: #999;
	display: block;
	font-size: 36rpx;
}
.circle_itm .circle_list.cur .title {
	color: #333;
}
.circle_itm .circle_itm_price {
	margin-top: 35rpx;
}
.circle_itm .circle_itm_price .dl {
	top: -8rpx;
	color: #999;
	float: left;
	display: block;
	font-weight: bold;
	font-size: 36rpx;
	position: relative;
}
.circle_itm .circle_list.cur .circle_itm_price .dl {
	color: #333;
}
.circle_itm .circle_itm_price .int {
	width: 70%;
	float: left;
	color: #333;
	display: block;
	font-size: 28rpx;
	margin-left: 18rpx;
}
.circle_itm .circle_itm_price .num {
	float: right;
	color: #999;
	font-size: 28rpx;
}
.circle_itm .circle_list.cur .circle_itm_price .num {
	color: #333;
}
.circle_itm_top .action {
	float: right;
	width: 73rpx;
	height: 45rpx;
	display: block;
	position: relative;
	border-radius: 30rpx;
	background-color: #ddd;
}
.circle_list.cur .action {
	background-color: #2ac7bc;
}
.circle_itm_top .action .bar {
	top: 0;
	left: 0;
	bottom: 0;
	width: 45rpx;
	height: 45rpx;
	display: block;
	position: absolute;
	border-radius: 50%;
	background-color: #fff;
	-webkit-transform: scale(0.9, 0.9);
	transform: scale(0.9, 0.9);
	-webkit-transition: all 0.3s ease-in-out 0s;
	transition: all 0.3s ease-in-out 0s;
}
.circle_list.cur .bar {
	left: 28rpx;
	-webkit-transition: all 0.3s ease-in-out 0s;
	transition: all 0.3s ease-in-out 0s;
}
.circle_btn {
	color: #fff;
	width: 455rpx;
	height: 93rpx;
	display: block;
	margin: 0 auto;
	font-size: 34rpx;
	text-align: center;
	line-height: 93rpx;
	margin-top: 50rpx;
	border-radius: 50rpx;
	box-shadow: -1rpx 10rpx 15rpx 3rpx rgba(51, 145, 255, 0.2);
	background: -webkit-linear-gradient(330deg, rgba(28, 210, 197, 1) 0%, rgba(4, 186, 173, 1) 100%);
	background: linear-gradient(120deg, rgba(28, 210, 197, 1) 0%, rgba(4, 186, 173, 1) 100%);
}
.free_theme_price .num {
	color: #DDDDDD;
	float: left;
	width: 93rpx;
	height: 63rpx;
	display: block;
	font-size: 32rpx;
	margin-top: 20rpx;
	text-align: center;
	line-height: 63rpx;
	border-radius: 7rpx;
	margin-right: 10rpx;
	background: #F2F2F2;
	border: 1px solid #F2F2F2;
}
.free_theme_price .num:nth-child(6n) {
	margin-right: 0;
}
.free_theme_price .cur {
	color: #fff;
	border-color: #17CDC0;
	background-color: #17CDC0;
}

