
page {
	background-color: #F5F5F5;
}
.budget_tab {
	background-color: #fff;
	border-top: 1px solid #eee;
}
.budget_tab .name {
	width: 50%;
	float: left;
	color: #333;
	display: block;
	font-size: 28rpx;
	padding: 30rpx 0;
	text-align: center;
	position: relative;
}
.budget_tab .name.cur {
	color: #01B7AA;
}
.budget_tab .name.cur:after {
	content: "";
	bottom: 0;
	left: 40%;
	width: 80rpx;
	height: 5rpx;
	display: block;
	position: absolute;
	border-radius: 10rpx;
	background-color: #01B7AA;
}
.budget_item {
	padding: 0 32rpx;
	padding-top: 18rpx;
}
.budget_list {
	overflow: hidden;
	position: relative;
	padding: 30rpx 28rpx;
	border-radius: 16rpx;
	margin-bottom: 18rpx;
	background-color: #fff;
	box-shadow: 0 0 14rpx 4rpx rgba(227, 227, 227, 0.5);
}
.budget_list .budget_top .type {
	color: #333;
	float: left;
	display: block;
	font-size: 36rpx;
}
.budget_list .budget_top .num {
	color: #333;
	float: right;
	display: block;
	font-size: 22rpx;
}
.budget_list .budget_top {
	margin-bottom: 20rpx;
}
.budget_list .budget_itm {
	width: 80%;
}
.budget_list .budget_itm .p {
	color: #999;
	display: block;
	font-size: 24rpx;
	margin-bottom: 8rpx;
}
.budget_list .budget_itm .opacity {
	opacity: 0;
}
.budget_list .price {
	color: #000;
	right: 25rpx;
	bottom: 80rpx;
	display: block;
	position: absolute;
	font-size: 42rpx;
}
.budget_list .status {
	color: #FE8B22;
	right: 25rpx;
	bottom: 42rpx;
	display: block;
	font-size: 26rpx;
	position: absolute;
}
.budget_list .status.succ {
	color: #D06300;
}
.budget_list .status.loser {
	color: #ff5656;
}

