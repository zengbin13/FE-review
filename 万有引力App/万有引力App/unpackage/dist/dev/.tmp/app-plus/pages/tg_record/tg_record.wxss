
page {
	background-color: #f9f9f9;
}
.search_bg {
	padding: 30rpx;
}
.search {
	width: 690rpx;
	height: 61rpx;
	/* margin: 30upx; */
	/* margin-top: 30upx; */

	border-radius: 31rpx;
	background-color: #fff;
	box-shadow: 0px 0px 10px 0px rgba(199, 199, 199, 0.5);
}
.search .img {
	float: left;
	width: 32rpx;
	height: 32rpx;
	display: block;
	padding: 14rpx 21rpx;
}
.search .int {
	width: 87%;
	float: left;
	color: #333;
	height: 61rpx;
	display: block;
	font-size: 28rpx;
	margin-left: 15rpx;
	line-height: 61rpx;
}
.tg_record_item {
	margin: 30rpx;
	margin-top: 0;
	background-color: #fff;
	box-shadow: 0px 0px 10px 0px rgba(199, 199, 199, 0.5);
	border-radius: 7px;
}
.tg_record_list {
	color: #333;
	height: 75rpx;
	font-size: 26rpx;
	line-height: 75rpx;
	padding: 16rpx 26rpx;
}
.tg_record_list .img {
	float: left;
	width: 75rpx;
	height: 75rpx;
	display: block;
	border-radius: 50%;
}
.tg_record_list .name {
	float: left;
	display: block;
	margin-left: 12rpx;
}
.tg_record_list .tel {
	float: left;
	display: block;
	margin-left: 17rpx;
}
.tg_record_list .num {
	float: left;
	display: block;
	margin-left: 30rpx;
}

