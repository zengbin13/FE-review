
.login_bg {
	top: 0;
	width: 100%;
	height: 100%;
	position: fixed;
}
.login_bg .bg {
	top: 0;
	z-index: 99;
	width: 100%;
	height: 100%;
	display: block;
	position: absolute;
}
.login_item {
	top: 130rpx;
	z-index: 999;
	position: relative;
}
.login_bg .img {
	width: 138rpx;
	height: 138rpx;
	display: block;
	margin: 0 auto;
	padding-top: 80rpx;
}
.login_bg .name {
	color: #fff;
	display: block;
	font-size: 40rpx;
	margin-top: 34rpx;
	text-align: center;
}
.login_bg .ename {
	color: #E4E4E4;
	display: block;
	font-size: 40rpx;
	margin-top: 6rpx;
	text-align: center;
}
.login_method {
	margin-top: 450rpx;
}
.login_btn {
	width: 619rpx;
	height: 88rpx;
	color: #fff;
	margin: 0 auto;
	font-size: 34rpx;
	margin-top: 44rpx;
	line-height: 88rpx;
	text-align: center;
	border-radius: 8rpx;
	background: -webkit-linear-gradient(319deg, rgba(28, 210, 197, 1) 0%, rgba(4, 186, 173, 1) 100%);
	background: linear-gradient(131deg, rgba(28, 210, 197, 1) 0%, rgba(4, 186, 173, 1) 100%);
}
.login_btn .img {
	top: -5rpx;
	width: 42rpx;
	height: 34rpx;
	padding-top: 0;
	position: relative;
	margin-right: 22rpx;
	display: inline-block;
	vertical-align: middle;
}
.login_btn:nth-child(2) .img {
	top: -5rpx;
	width: 28rpx;
	height: 42rpx;
	padding-top: 0;
	position: relative;
	margin-right: 36rpx;
	display: inline-block;
	vertical-align: middle;
}
.login_dx {
	color: #999;
	display: block;
	font-size: 28rpx;
	text-align: center;
	margin-top: 30rpx;
}

