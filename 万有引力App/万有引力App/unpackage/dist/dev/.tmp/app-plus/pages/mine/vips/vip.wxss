.vip_item {
		padding: 0 30rpx;
		margin-top: 18rpx;
		background-color: #fff;
}
.vip_item .vip_list {
		padding: 20rpx 0;
		position: relative;
}
.vip_item .vip_lists {
		border-bottom: 1px solid #E7E7E7;
}
.vip_item .vip_list .vip_menu {
		margin-bottom: 17rpx;
}
.vip_item .vip_list .vip_menu .img {
		top: 3rpx;
		float: left;
		width: 35rpx;
		height: 35rpx;
		display: block;
		position: relative;
}
.vip_item .vip_list .vip_menu .title {
		float: left;
		color: #2F2E2E;
		display: block;
		font-size: 26rpx;
		font-weight: bold;
		margin-left: 22rpx;
}
.vip_item .vip_list .vip_menu .enjoy {
		float: right;
		color: #29C2B7;
		display: block;
		font-size: 22rpx;
}
.vip_item .vip_list .p {
		color: #999;
		display: block;
		font-size: 26rpx;
		line-height: 37rpx;
		margin-left: 55rpx;
}
.vip_btn {
		color: #fff;
		height: 100rpx;
		display: block;
		margin: 0 32rpx;
		font-size: 32rpx;
		text-align: center;
		margin-top: 100rpx;
		line-height: 100rpx;
		border-radius: 10rpx;
		background-color: #5bcc94;
}

