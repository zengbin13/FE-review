
.sysInfo {
	position: relative;
}
.sysInfo_top {
	padding: 0 30rpx;
}
.sysInfo .sys_title {
	float: left;
	color: #333;
	display: block;
	font-size: 54rpx;
}
.sysInfo .sys_return {
	width: 31rpx;
	height: 30rpx;
	float: right;
	display: block;
	margin-top: 23rpx;
	background: url(data:image/png;base64,);
	background-repeat: no-repeat;
	background-size: 100% 100%;
}
.sysInfo_itm {
	margin-top: 0rpx;
}
.sysInfo_list {
	padding: 21rpx 30rpx;
	border-bottom: 1px solid #eee;
}
.sysInfo_list .sysInfo_img {
	float: left;
	width: 111rpx;
	height: 111rpx;
	display: block;
	position: relative;
}
.sysInfo_list .is_icon {
	top: -10rpx;
	right: -10rpx;
	z-index: 99;
	width: 20rpx;
	height: 20rpx;
	display: none;
	border-radius: 50%;
	position: absolute;
	background-color: #FF7373;
}
.sysInfo_list .is_icon.isRead {
	display: block;
}
.sysInfo_list .sysInfo_img .img {
	width: 100%;
	height: 100%;
	display: block;
}
.sysInfo_list .sysInfo_menu {
	width: 80%;
	float: right;
}
.sysInfo_list .sysInfo_menu .sysInfo_name {
	color: #4B4B4B;
	display: block;
	font-size: 30rpx;
	margin-top: 7rpx;
}
.sysInfo_list .sysInfo_menu .sysInfo_name .time {
	float: right;
	color: #B2B2B2;
	display: block;
	font-size: 20rpx;
}
.sysInfo_list .sysInfo_menu .sysInfo_text {
	color: #B2B2B2;
	display: block;
	font-size: 26rpx;
	margin-top: 18rpx;
}
.sysInfo_topTab {
	border-bottom: 1px solid #e7e7e7;
}
.sysInfo_topTabList {
	float: left;
	width: 33.3%;
	color: #ccc;
	font-size: 28rpx;
	padding: 27rpx 0;
	text-align: center;
	position: relative;
}
.sysInfo_topTabList:after {
	top: 28rpx;
	content: "";
	width: 0;
	height: 4rpx;
	margin: 0 auto;
	display: block;
	position: relative;
	background-color: #01B7AA;
}
.sysInfo_topTabList.active {
	color: #01B7AA;
}
.sysInfo_topTabList.active:after {
	width: 30%;
	transition: width .5s;
	-moz-transition: width .5s;
	/* Firefox 4 */
	-webkit-transition: width .5s;
	/* Safari å’Œ Chrome */
	-o-transition: width .5s;
	/* Opera */
}

